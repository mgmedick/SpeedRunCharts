@using SpeedRunApp.Model.ViewModels;
@using SpeedRunCommon;
@model SpeedRunApp.Model.ViewModels.GameDetailsViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@section Styles {
    <link rel="stylesheet" href="~/lib/free-jqgrid/css/ui.jqgrid.css" />
    <link rel="stylesheet" href="~/css/free-jqgrid-custom.css" />
    <link rel="stylesheet" href="~/css/scroller-tab.css" />
    <style>
        .options a:not(:first-child) {
            padding-left: 5px;
        }
    </style>
}

@section Scripts {
    <script src="@Url.Content("~/lib/free-jqgrid/jquery.jqgrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/moment.js/moment.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/jquery.mousewheel/jquery.mousewheel.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/scroller-tab.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/fusioncharts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/fusioncharts.charts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/fusioncharts.widgets.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/themes/fusioncharts.theme.fusion.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/themes/fusioncharts.theme.candy.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/jquery-fusioncharts/dist/fusioncharts.jqueryplugin.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-multi-series-chart.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-pie-chart.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-stacked-bar-chart.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-multi-series-line-chart.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/helpers/date-helper.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/helpers/math-helper.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/common.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/game-details-charts/game-top-speed-runs-chart.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/game-details-charts/game-speed-runs-by-month-chart.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/game-details-charts/game-speed-runs-percentile-chart.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/speedrun-edit.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/speedrun-grid.js?v=10/10/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/game-details.js?v=10/10/2020")" type="text/javascript"></script>

    <script type="text/javascript">
        $().ready(function () {
            var _categoryTypes = @Html.Raw(Json.Serialize(Model.CategoryTypes));
            var _games = @Html.Raw(Json.Serialize(Model.Games));
            var _categories = @Html.Raw(Json.Serialize(Model.Categories));
            var _levels = @Html.Raw(Json.Serialize(Model.Levels));
            var _subCategoryVariables = @Html.Raw(Json.Serialize(Model.SubCategoryVariables));
            var _variables = @Html.Raw(Json.Serialize(Model.Variables));

            initializeClient(_categoryTypes, _games, _categories, _levels, _subCategoryVariables, _variables);
        });
    </script>
}

<div class="container-fluid">
    <div class="container ml-0">
        <div class="row no-gutters p-0 d-flex">
            <div class="p-2 col-sm-2 align-self-center">
                <div class="img-round">
                    <img src="@Model.CoverImageUri" alt="Responsive image">
                </div>
            </div>
            <div class="p-2 align-self-end">
                <h2 class="m-0">@Model.Name</h2>
            </div>
        </div>
    </div>
    <div class="container ml-0">
        <h4>Details</h4>
        <div class="pl-3">
            <div class="row no-gutters">
                <div class="form-group">
                    <label for="spnYearOfRelease">Release Year</label>
                    <span id="spnYearOfRelease">@Model.YearOfRelease</span>
                </div>
            </div>
            <div class="row no-gutters pt-1">
                <div class="form-group">
                    <label for="spnPlatforms">Platforms</label>
                    <span id="spnPlatforms">@Model.PlatformsString</span>
                </div>
            </div>
            <div class="row no-gutters pt-1">
                <div class="form-group">
                    <label for="spnModerators">Moderators</label>
                    <span id="spnModerators">
                        @Html.CommaSeparated(Model.Moderators.Select(i => Html.ActionLink(i.Name, "UserDetails", "User", new { userID = i.ID }).ToHtmlString()))
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid pt-3">
        <h4>Leaderboards</h4>
        <div id="divSearchSpeedRunGridContainer" class="container ml-0 pt-2">
        </div>
        <div id="divSpeedRunGridContainer" class="pl-3 pt-2">
        </div>
        <div id="divSpeedRunGridLoading" class="pl-3 pt-2">
            <div class="container d-flex ml-0" style="height:465px;">
                <div class="mx-auto align-self-center">
                    <i class="fa fa-spinner fa-spin fa-2x"></i>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hdnGameID" name="gameID" value="@Html.DisplayFor(i=>i.ID)" />
</div>
<div id="editModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="display:none;">
            </div>
            <div class="modal-loading">
                <div class="container d-flex" style="height:465px;">
                    <div class="mx-auto align-self-center">
                        <i class="fa fa-spinner fa-spin fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
















