@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpeedRunApp</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
        <link rel="stylesheet" href="~/lib/chosen/chosen.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.min.css" />
        <link rel="stylesheet" href="~/lib/chosen/chosen.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" />
    </environment>

    @RenderSection("Styles", required: false)
</head>
<body class="bg-grey">
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <a class="navbar-brand" asp-area="" asp-controller="SpeedRun" asp-action="SpeedRunList">SpeedRunApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="SpeedRunController" asp-action="SpeedRunList">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled">Disabled</a>
                </li>
            </ul>
            @*<form class="form-inline my-2 my-lg-0">
                <input id="txtGameUserSearch" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>*@
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - SpeedRunApp</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
        <script src="@Url.Content("~/lib/jqueryui/jquery-ui.js")"></script>
        <script src="@Url.Content("~/lib/chosen/chosen.jquery.js")"></script>
        <script src="@Url.Content("~/lib/underscore.js/underscore.js")"></script>
        <script src="@Url.Content("~/lib/bootstrap/js/bootstrap.bundle.js")"></script>
        <script src="@Url.Content("~/js/layout.js")"></script>
    </environment>
    <environment exclude="Development">
        <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
        <script src="@Url.Content("~/lib/jqueryui/jquery-ui.min.js")"></script>
        <script src="@Url.Content("~/lib/chosen/chosen.jquery.min.js")"></script>
        <script src="@Url.Content("~/lib/underscore.js/underscore.min.js")"></script>
        <script src="@Url.Content("~/lib/bootstrap/js/bootstrap.bundle.min.js")"></script>
        <script src="@Url.Content("~/lib/bootstrap/js/bootstrap.bundle.min.js")"></script>
        <script src="@Url.Content("~/js/layout.js")"></script>
    </environment>
    <script type="text/javascript">
        $().ready(function () {
            var maxElementsPerPage = @Json.Serialize(@Configuration.GetSection("ApiSettings").GetSection("MaxElementsPerPage").Value);
            var requestLimit = @Json.Serialize(@Configuration.GetSection("ApiSettings").GetSection("RequestLimit").Value);
            var timeLimitMS = @Json.Serialize(@Configuration.GetSection("ApiSettings").GetSection("TimeLimitMS").Value);

            initializeClient(maxElementsPerPage, requestLimit, timeLimitMS);
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
