@model SpeedRunApp.Model.ViewModels.SignUpViewModel

@{ ViewBag.Title = "Sign Up"; }

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>

    function signUp() {
        var $modal = $('#loginModal');
        var $modalBody = $modal.find('.modal-body');
        var $loading = $modal.find('.signup-loading');
        var $successmsg = $modal.find('.signup-successmsg');
        var $summaryul = $modal.find('.validation-summary-errors ul');
        var formData = new FormData($('#frmSignUp')[0]);

        $successmsg.hide();
        $summaryul.empty()

        if ($('#frmSignUp').valid()) {
            $loading.show();

            $.ajax({
                url: "/SpeedRun/SignUp",
                processData: false,
                contentType: false,
                type: "POST",
                data: formData,
                success: function (data) {
                    if (data.success) {
                        $loading.hide();
                        $successmsg.show();
                    } else if (data.success === false) {
                        $modalBody.html(data.message);
                    } else {
                        $modalBody.html(data);
                    }
                }
            });
        }
    }

</script>

<div id="divSignUp" class="container">
    <form asp-controller="SpeedRun" asp-action="SignUp" method="post" id="frmSignUp" role="form">
        @Html.ValidationSummary(string.Empty, new { @class = "signup-summary" })
        <div class="form-group row no-gutters">
            <label class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-auto">
                @Html.TextBoxFor(i => i.Email, new { @autocomplete = "off", @class = "form-control" })
            </div>
        </div>
        <div class="row no-gutters pt-1">
            <div class="form-group mx-auto">
                <input id="btnSignUp" type="button" class="btn btn-primary" value="SignUp" onclick="signUp()" />
            </div>
        </div>
        <div>
            <div class="signup-loading" style="display:none;">
                <div class="container d-flex p-3">
                    <div class="mx-auto align-self-center">
                        <i class="fa fa-spinner fa-spin fa-lg"></i>
                    </div>
                </div>
            </div>
            <div class="signup-successmsg" style="display:none;">
                <div class="container p-3" style="max-width: 400px;">
                    <div class="mx-auto">
                        <span>To Activate your account click the activation link in the email we just sent you.</span>
                        <br />
                        <br />
                        <span>If your email has not arrived try these steps:</span>
                        <ul class="pl-4">
                            <li>Wait 30 mins</li>
                            <li>Check your spam folder</li>
                            <li>Try Sign Up again</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>





