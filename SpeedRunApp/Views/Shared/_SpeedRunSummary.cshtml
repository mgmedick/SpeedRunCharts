@model SpeedRunApp.Model.ViewModels.SpeedRunViewModel

<div class="bg-white speedRunSummary p-2">
    <div class="header p-0 pb-2 container d-flex">
        <div class="p-0 col-2 align-self-center">
            <div class="img-round">
                <img src="@Model.GameCoverImageLinkString" class="img-fluid" alt="Responsive image">
            </div>
        </div>
        <div class="pl-2 align-self-center">
            <div>
                <small class="text-muted">Posted @Model.RelativeDateSubmittedString</small>
            </div>
            <div>
                <h5>
                    @Html.ActionLink(@Model.Game.Name, "GameDetails", "Game", new { gameID = @Model.Game.ID }, new { @class = "text-dark" })
                    <small class="text-secondary">@Model.Category.Name</small>
                </h5>
            </div>
            <div class="row no-gutters text-secondary">
                <div class="col-xs-4">
                    @Html.ActionLink(Model.Player.Name, "UserDetails", "User", new { userID = @Model.Player.ID }, new { @class = "text-secondary" })
                </div>
                <div class="col-xs-4 ml-1">
                    - @Model.PrimaryTimeString
                </div>
                <div class="col-xs-4 ml-1">
                </div>
            </div>
        </div>
        <div class="p-0 ml-auto align-self-center">
            @Html.ActionLink("Details", "SpeedRunDetails", "SpeedRun", null, new { @class = "btn btn-primary btn-large" })
        </div>
    </div>
    <div class="p-0 embed-responsive embed-responsive-16by9">
        <iframe src="@Model.VideoLinkEmbeddedString"
                frameborder="0"
                scrolling="no"
                allowfullscreen="true"></iframe>
    </div>
</div>



