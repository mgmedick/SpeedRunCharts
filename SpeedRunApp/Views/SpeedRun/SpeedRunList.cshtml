@model SpeedRunApp.Model.ViewModels.SpeedRunListViewModel

@{ ViewBag.Title = "SpeedRunList"; }

@section Scripts {
    <script src="@Url.Content("~/js/speedrun-edit.js?v=12/22/2020")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/speedrun-list.js?v=12/22/2020")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            var _elementsPerPage = @Json.Serialize(Model.ElementsPerPage);

            initializeClient(_elementsPerPage);
        })
    </script>
}

<div>
    <div id="divSpeedRunListSort">
        <div class="container d-flex mx-auto p-0" style="max-width:598px; margin-bottom:20px;">
            <div class="row no-gutters p-2 align-self-center">
                <div id="btnGrpCategory" class="btn-group btn-group-toggle categoryGroup" data-toggle="buttons">
                    <label class="btn btn-primary btn-sm active">
                        <input type="radio" class="category" id="btnCategory0" name="btnCategory" autocomplete="off" value="0" checked><i class="fa fa-certificate fa-lg"></i>&nbsp;New
                    </label>
                    <label class="btn btn-primary btn-sm">
                        <input type="radio" class="category" id="btnCategory1" name="btnCategory" autocomplete="off" value="1"><i class="fa fa-percentage fa-lg"></i>&nbsp;Top 5%
                    </label>
                    <label class="btn btn-primary btn-sm">
                        <input type="radio" class="category" id="btnCategory2" name="btnCategory" autocomplete="off" value="2"><i class="fa fa-award fa-lg"></i>&nbsp;First
                    </label>
                    <label class="btn btn-primary btn-sm">
                        <input type="radio" class="category" id="btnCategory3" name="btnCategory" autocomplete="off" value="3"><i class="fa fa-fire fa-lg"></i>&nbsp;Trending
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div id="divSpeedRunList"></div>
    <div id="loading">
        <div class="d-flex">
            <div class="mx-auto">
                <i class="fas fa-spinner fa-spin fa-lg"></i>
            </div>
        </div>
    </div>
    <div id="editModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="display:none;">
                </div>
                <div class="modal-loading">
                    <div class="container d-flex" style="height:465px;">
                        <div class="mx-auto align-self-center">
                            <i class="fa fa-spinner fa-spin fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




