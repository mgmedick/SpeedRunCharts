@model SpeedRunApp.Model.ViewModels.SpeedRunListViewModel

@{
    ViewBag.Title = "SpeedRunList";
}

@section Scripts {
    <script src="@Url.Content("~/js/speedrun-list.js")" type="text/javascript"></script>

    <script>
        $(document).ready(InitializeClient)
    </script>
}

<h2>Latest Games</h2>

<div>
    <div class="container ml-0">
        <div class="pl-3">
            <div class="row no-gutters">
                <div class="form-group">
                    <label for="txtGameUserSearch">Search</label>
                    <input id="txtGameUserSearch" type="text" class="" placeholder="Seach Game or User"/>
                </div>
            </div>
        </div>
    </div>
    <div id="divSpeedRunList">
        @foreach (var run in Model.SpeedRuns)
        {
            <div class="container mx-auto p-0" style="max-width:598px; margin-bottom:20px;">
                @await Html.PartialAsync("_SpeedRunSummary", run)
            </div>
        }
    </div>
    <div id="loading">
        <div class="d-flex">
            <div class="mx-auto">
                <i class="fas fa-spinner fa-spin fa-lg"></i>
            </div>
        </div>
    </div>
</div>




