@using System
@using SpeedRunApp.WebUI
@model SpeedRunApp.Model.SpeedRunViewModel

<div class="bg-white mx-auto speedRunSummary" style="width:598px; margin-bottom:20px; padding:20px 10px 0px 10px;">
    <div class="container d-flex h-100">
        <div class="mr-auto">
            <div>
                <small class="text-muted">Posted @Model.RealtiveSubmittedDateString</small>
            </div>
            <div>
                <h5>@Model.GameName <small class="text-secondary">@Model.CategoryName</small></h5>
            </div>
            <div class="row no-gutters text-secondary">
                <div class="col-xs-4">
                    @Model.PlayerName
                </div>
                <div class="col-xs-4 ml-1">
                    - @Model.PrimaryRunTimeString
                </div>
                <div class="col-xs-4 ml-1">
                </div>
            </div>
        </div>
        <div class="align-self-end" style="padding-bottom:5px;">
            @Html.ActionLink("Details", "SpeedRunDetails", "SpeedRun", null, new { @class = "btn btn-primary btn-large" })
        </div>
    </div>
    <div>
        <iframe src="@Model.VideoLinkEmbedded"
                height="337"
                width="100%"
                frameborder="0"
                scrolling="no"
                allowfullscreen="true"></iframe>
    </div>
</div>



