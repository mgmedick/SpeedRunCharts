@model SpeedRunApp.Model.ViewModels.UserDetailsViewModel

@{ ViewBag.Title = "UserDetails";
    var controllerName = ViewContext.RouteData.Values["controller"].ToString(); }

@section Styles {
    <link rel="stylesheet" href="~/lib/free-jqgrid/css/ui.jqgrid.css" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/free-jqgrid-custom.css" />
    <link rel="stylesheet" href="~/css/scroller-tab.css" />

    <style>
        .brand-logo {
            width: 25px;
        }
    </style>
}

@section Scripts {
    <script src="@Url.Content("~/lib/free-jqgrid/jquery.jqgrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/moment.js/moment.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/lib/fusioncharts/fusioncharts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/fusioncharts.charts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/fusioncharts.widgets.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/themes/fusioncharts.theme.fusion.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/fusioncharts/themes/fusioncharts.theme.candy.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/jquery-fusioncharts/dist/fusioncharts.jqueryplugin.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/jquery.mousewheel/jquery.mousewheel.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/helpers/date-helper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/helpers/math-helper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-multi-series-chart.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-pie-chart.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-stacked-bar-chart.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/chart-definitions/fusion-multi-series-line-chart.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/scroller-tab.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/user-details-charts/user-top-speed-runs-chart.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/user-details-charts/user-speed-runs-by-date-chart.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/charts/user-details-charts/user-speed-runs-percentile-chart.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/speedrun-grid.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/user-details.js")" type="text/javascript"></script>

    <script>
        $().ready(function () {
            initializeClient();
        });</script>
}

<div class="container-fluid">
    <div class="container ml-0">
        <div class="row no-gutters p-0 d-flex">
            <div class="p-2 col-sm-2 align-self-center" style="@((Model.ProfileImage == null) ? "display:none" : "")">
                <div class="img-round">
                    <img src="@Model.ProfileImage" alt="Responsive image">
                </div>
            </div>
            <div class="pr-4 align-self-end">
                <h2 class="m-0">@Model.Name</h2>
            </div>
            <div class="p-1 align-self-end" style="@((Model.TwitterProfile == null) ? "display:none" : "")">
                <a href="@Model.TwitterProfile"><img src="@Url.Content("~/images/Twitter_Logo_WhiteOnBlue.svg")" class="img-fluid brand-logo" alt="Responsive image"></a>
            </div>
            <div class="p-1 align-self-end" style="@((Model.TwitchProfile == null) ? "display:none" : "")">
                <a href="@Model.TwitchProfile"><img src="@Url.Content("~/images/TwitchGlitchPurple.svg")" class="img-fluid brand-logo" alt="Responsive image"></a>
            </div>
            <div class="p-1 align-self-end" style="@((Model.YoutubeProfile == null) ? "display:none" : "")">
                <a href="@Model.YoutubeProfile"><img src="@Url.Content("~/images/youtube_social_square_red.svg")" class="img-fluid brand-logo" alt="Responsive image"></a>
            </div>
        </div>
    </div>
    <div class="container-fluid pt-3">
        <h4>SpeedRuns</h4>
        <div id="divSearchSpeedRunGridContainer" class="container ml-0 pt-2">
        </div>
        <div id="divSpeedRunGridContainer" class="pl-3 pt-2">
        </div>
        <div id="divSpeedRunGridLoading" class="pl-3 pt-2">
            <div class="container d-flex ml-0" style="height:465px;">
                <div class="mx-auto align-self-center">
                    <i class="fa fa-spinner fa-spin fa-2x"></i>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hdnUserID" name="userID" value="@Html.DisplayFor(i=>i.ID)" />
</div>
<div id="videoLinkModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document" style="height:700px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="display:none;">
            </div>
            <div class="modal-loading">
                <div class="container d-flex" style="height:465px;">
                    <div class="mx-auto align-self-center">
                        <i class="fa fa-spinner fa-spin fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>















