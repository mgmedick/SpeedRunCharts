@model SpeedRunApp.Model.ViewModels.UserDetailsViewModel

@{
    ViewBag.Title = "UserDetails";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/free-jqgrid/css/ui.jqgrid.css" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/free-jqgrid-custom.css" />
    <link rel="stylesheet" href="~/css/scroller-tab.css" />

    <style>
        .brand-logo {
            width: 25px;
        }
    </style>
}

@section Scripts {
    <script src="@Url.Content("~/lib/free-jqgrid/jquery.jqgrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/moment.js/moment.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/jqueryui/jquery-ui.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/helpers/date-helper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/helpers/ajax-helper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/helpers/template-helper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/helpers/math-helper.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/user-details.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/scroller-tab.js")" type="text/javascript"></script>

    <script>$().ready(
            initializeClient(@Html.Raw(Json.Serialize(Model.SearchCategoryTypes)), @Html.Raw(Json.Serialize(Model.SearchGames)), @Html.Raw(Json.Serialize(Model.SearchCategories)), @Html.Raw(Json.Serialize(Model.SearchLevels)))
        );
    </script>
}

<div class="container-fluid">
    <div class="container ml-0">
        <div class="row no-gutters p-0 d-flex">
            <div class="p-2 col-sm-2 align-self-center" style="@((Model.ProfileImage == null) ? "display:none" : "")">
                <div class="img-round">
                    <img src="@Model.ProfileImage" alt="Responsive image">
                </div>
            </div>
            <div class="pr-4 align-self-end">
                <h2 class="m-0">@Model.Name</h2>
            </div>
            <div class="p-1 align-self-end" style="@((Model.TwitterProfile == null) ? "display:none" : "")">
                <a href="@Model.TwitterProfile"><img src="@Url.Content("~/images/Twitter_Logo_WhiteOnBlue.svg")" class="img-fluid brand-logo" alt="Responsive image"></a>
            </div>
            <div class="p-1 align-self-end" style="@((Model.TwitchProfile == null) ? "display:none" : "")">
                <a href="@Model.TwitchProfile"><img src="@Url.Content("~/images/TwitchGlitchPurple.svg")" class="img-fluid brand-logo" alt="Responsive image"></a>
            </div>
            <div class="p-1 align-self-end" style="@((Model.YoutubeProfile == null) ? "display:none" : "")">
                <a href="@Model.YoutubeProfile"><img src="@Url.Content("~/images/youtube_social_square_red.svg")" class="img-fluid brand-logo" alt="Responsive image"></a>
            </div>
        </div>
    </div>
    <div class="container ml-0 pt-4">
        <div id="divSearch">
            <form id="frmSearch" method="post">
                <div class="row no-gutters">
                    <div class="form-group">
                        <label>Start Date</label>
                        <span class="date-icon-wrapper"><input id="txtStartDate" type="text" class="date" value="" /></span>
                    </div>
                    <div class="form-group">
                        <label for="txtEndDate">End Date</label>
                        <span class="date-icon-wrapper"><input id="txtEndDate" type="text" class="date" value="" /></span>
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="form-group">
                        <label for="drpCategoryTypes">Category Type</label>
                        @Html.ListBox("drpCategoryTypes", new SelectList(Model.SearchCategoryTypes, "ID", "Name", -1), new { @style = "width:250px", @class = "chosen" })
                    </div>
                    <div class="form-group">
                        <label for="drpGames">Game</label>
                        @Html.ListBox("drpGames", new SelectList(Model.SearchGames, "ID", "Name", -1), new { @style = "width:250px", @class = "chosen" })
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="form-group">
                        <label for="drpCategories">Category</label>
                        @Html.ListBox("drpCategories", new SelectList(Model.SearchCategories, "ID", "Name", -1), new { @style = "width:250px", @class = "chosen" })
                    </div>
                    <div id="divLevels" class="form-group" style="display:none;">
                        <label for="drpLevels">Level</label>
                        @Html.ListBox("drpLevels", new SelectList(Model.SearchLevels, "ID", "Name", -1), new { @style = "width:250px", @class = "chosen" })
                    </div>
                </div>
                <div class="row no-gutters pt-1">
                    <div class="form-group">
                        <input type="button" class="btn btn-primary" value="search" onclick="javascript: runSearch();"/>
                    </div>
                </div>
                <input type="hidden" id="hdnUserID" name="userID" value="@Html.DisplayFor(i=>i.ID)"/>
            </form>
        </div>
    </div>
    <div id="divUserDetailsGrid" class="pt-4 pl-3">
        @await Html.PartialAsync("_UserDetailsGrid", Model.UserDetailsGridVM)
    </div>
</div>
<div id="videoLinkModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document" style="height:700px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <div id="loading">
                    <div class="d-flex">
                        <div class="mx-auto">
                            <i class="fas fa-spinner fa-spin fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>















